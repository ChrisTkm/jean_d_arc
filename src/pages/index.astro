---
// Redirección a la página principal de docs.
export const prerender = true;
if (Astro.request.url.endsWith('/')) {
  return Astro.redirect('/introduccion/');
}
---
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <title>Redirigiendo…</title>
    <meta http-equiv="refresh" content="0; url=/introduccion/" />
  </head>
  <body>
    <p>Redirigiendo a documentación… <a href="/introduccion/">Ir ahora</a></p>
  </body>
</html>
